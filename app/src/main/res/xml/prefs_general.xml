<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:id="@+id/pref_location"
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:id="@+id/pref_temp_units"
        android:title="@string/pref_temp_label"
        android:key="@string/pref_temp_key"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_values"
        android:defaultValue="@string/pref_temp_default"/>

</PreferenceScreen>